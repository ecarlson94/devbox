{
  "packages": [
    "ripgrep@latest",
    "fd@latest",
    "neovim@latest",
    "git@latest",
    "gh@latest",
    "zsh@latest",
    "diff-so-fancy@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "dotfiles": [
        "git clone --recursive https://github.com/ecarlson94/dotfiles.git ~/.config/dotfiles",
        "cd ~/.config/dotfiles",
        "./install-profile headless"
      ],
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
